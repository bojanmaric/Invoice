<Window x:Class="Invoice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invoice"
        mc:Ignorable="d"
        Title="MainWindow" Height="585" Width="935" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="491*"/>
            <ColumnDefinition Width="444*"/>
        </Grid.ColumnDefinitions>
        <Label Content="FIle" HorizontalAlignment="Left" Margin="5,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.347,0.537" Height="26" Width="28"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Margin="38,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" IsEnabled="False" Height="27"/>
        <Button x:Name="btnFile" Content="..." HorizontalAlignment="Left" Margin="254,45,0,0" VerticalAlignment="Top" Width="47" Height="27"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,350,20,32" Grid.ColumnSpan="2"/>
        <Label Content="Šifra artikla" HorizontalAlignment="Left" Margin="58,137,0,0" VerticalAlignment="Top" Width="84" Height="26"/>
        <TextBox x:Name="txtSifraArtikla" HorizontalAlignment="Left" Margin="38,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Height="31" FontSize="16"/>
        <TextBox x:Name="txtNazivArtikla" HorizontalAlignment="Left" Margin="201,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="31" FontSize="16"/>
        <Label Content="Naziv artikla" HorizontalAlignment="Left" Margin="275,137,0,0" VerticalAlignment="Top" Height="26" Width="75"/>
        <Label Content="%PDV" HorizontalAlignment="Left" Margin="228,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.54,0.533" Height="26" Width="42"/>
        <ComboBox x:Name="cmbPDV" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="50" Height="31"/>
        <Label Content="J/M" HorizontalAlignment="Left" Margin="34,196,0,0" VerticalAlignment="Top" Height="24" RenderTransformOrigin="0.451,1.226" Width="30"/>
        <ComboBox x:Name="cmbJedinicaMere" HorizontalAlignment="Left" Margin="34,222,0,0" VerticalAlignment="Top" Width="30" Height="31"/>
        <Label Content="Količina" HorizontalAlignment="Left" Margin="114,196,0,0" VerticalAlignment="Top" Height="26" Width="51"/>
        <TextBox x:Name="txtKolicina" HorizontalAlignment="Left" Margin="84,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31"/>
        <TextBox x:Name="txtUkupno" HorizontalAlignment="Left" Margin="233,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" IsEnabled="False" Grid.Column="1" Height="31"/>
        <TextBox x:Name="txtNetoUkupno" HorizontalAlignment="Left" Margin="375,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="31" Grid.ColumnSpan="2" IsEnabled="False"/>
        <TextBox x:Name="txtPdvUkupno" HorizontalAlignment="Left" Margin="83,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Grid.Column="1" Height="31" IsEnabled="False"/>
        <Label Content="Neto" HorizontalAlignment="Left" Margin="452,266,0,0" VerticalAlignment="Top" Height="26" Width="39" RenderTransformOrigin="0.595,0.623"/>
        <Label Content="PDV Ukupno" HorizontalAlignment="Left" Margin="109,266,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="80"/>
        <Label Content="Bruto" HorizontalAlignment="Left" Margin="301,266,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="42"/>
        <Label Content="Iznos PDV-a" HorizontalAlignment="Left" Margin="327,194,0,0" VerticalAlignment="Top" Width="96" Height="26"/>
        <TextBox x:Name="txtIznosPdva" HorizontalAlignment="Left" Margin="312,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Height="33" IsEnabled="False"/>
        <TextBox x:Name="txtUkupnoPojediacno" HorizontalAlignment="Left" Height="35" Margin="34,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" IsEnabled="False" FontSize="16"/>
        <Label Content="Ukupno" HorizontalAlignment="Left" Margin="79,266,0,0" VerticalAlignment="Top" Width="100" Height="26" RenderTransformOrigin="0.177,0.705"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="208" Margin="35,45,0,0" VerticalAlignment="Top" Width="389">
            <TextBox x:Name="txtPIBCustomer" TextWrapping="Wrap" Margin="62,67,9,103" FontSize="16"/>

        </Border>
        <Label Content="PIB" HorizontalAlignment="Left" Margin="57,119,0,0" VerticalAlignment="Top" Width="39" Grid.Column="1"/>
        <Label Grid.Column="1" Content="KUPAC" HorizontalAlignment="Left" Margin="203,9,0,0" VerticalAlignment="Top" Width="60" FontSize="16"/>
        <Label Content="Naziv" HorizontalAlignment="Left" Margin="57,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.436,0.545" Grid.Column="1"/>
        <Button x:Name="btnAddCustomer" Grid.Column="1" Content="DODAJ " HorizontalAlignment="Left" Margin="255,189,0,0" VerticalAlignment="Top" Height="35" Width="135" IsEnabled="False"/>
        <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Margin="101,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Grid.Column="1" Height="39" FontSize="16"/>
        <Button x:Name="btnFindCustomers" Content="PRONADJI" HorizontalAlignment="Left" Margin="77,189,0,0" VerticalAlignment="Top" Height="35" Width="145" Grid.Column="1" IsEnabled="False"/>
        <DatePicker x:Name="dateCreate" HorizontalAlignment="Left" Margin="375,36,0,0" VerticalAlignment="Top" Height="24" Width="116"/>
        <DatePicker x:Name="dateDelivery" HorizontalAlignment="Left" Margin="375,108,0,0" VerticalAlignment="Top" Height="24" Width="116"/>
        <Label Content="Datum Plaćanja" HorizontalAlignment="Left" Margin="375,77,0,0" VerticalAlignment="Top" Width="116"/>
        <Label Content="Datum Izdavanja" HorizontalAlignment="Left" Margin="375,10,0,0" VerticalAlignment="Top" Width="116"/>
        <Button Content="UČITAJ ARTIKLE" HorizontalAlignment="Left" Margin="84,96,0,0" VerticalAlignment="Top" Height="24" Width="186" IsEnabled="False"/>

    </Grid>
</Window>
