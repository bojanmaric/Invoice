        <Button x:Name="btnFindCustomers" Content="PRONADJI" HorizontalAlignment="Left" Margin="101,184,0,0" VerticalAlignment="Top" Height="35" Width="145" Grid.Column="1" IsEnabled="False"/>
        <DatePicker x:Name="dateCreate" HorizontalAlignment="Left" Margin="344,54,0,0" VerticalAlignment="Top" Height="24" Width="146" Grid.ColumnSpan="2"/>
