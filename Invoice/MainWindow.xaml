<Window x:Class="Invoice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invoice"
        mc:Ignorable="d"
        Title="KREIRANJE PONUDE" Height="693" Width="935" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Icon="/offers-icon-24.png">
    <Window.FocusVisualStyle>
        <Style/>
    </Window.FocusVisualStyle>
    <Grid x:Name="winmain" Margin="0,0,0,37" Initialized="winmain_Initialized">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="489*"/>
            <ColumnDefinition Width="446*"/>
        </Grid.ColumnDefinitions>
        <Label Content="File" HorizontalAlignment="Left" Margin="16,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.347,0.537" Height="26" Width="28"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Margin="49,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" IsEnabled="False" Height="27"/>
        <Button x:Name="btnFile" Content="..." HorizontalAlignment="Left" Cursor="Hand" Margin="254,8,0,0" VerticalAlignment="Top" Width="47" Height="27" IsEnabled="False"/>
        <DataGrid x:Name="dataGridInvoice" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,250,20,-17" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="Šifra artikla" HorizontalAlignment="Left" Margin="19,37,0,0" VerticalAlignment="Top" Width="84" Height="26" Grid.Row="1"/>
        <TextBox x:Name="txtIDArticle" HorizontalAlignment="Left" Margin="19,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" Height="31" FontSize="16" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD10017"/>
        <TextBox x:Name="txtNameArt" HorizontalAlignment="Left" Margin="100,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="31" FontSize="16" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD10017"/>
        <Label Content="Naziv artikla" HorizontalAlignment="Left" Margin="154,36,0,0" VerticalAlignment="Top" Height="26" Width="74" Grid.Row="1"/>
        <Label Content="%PDV" HorizontalAlignment="Left" Margin="235,107,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.54,0.533" Height="26" Width="43" Grid.Row="1"/>
        <ComboBox x:Name="cmbPDV" HorizontalAlignment="Left" Margin="231,133,0,0" Cursor="Hand" VerticalAlignment="Top" Width="51" Height="31" Grid.Row="1" FontSize="18">
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </ComboBox>
        <Label Content="J/M" HorizontalAlignment="Left" Margin="38,107,0,0" VerticalAlignment="Top" Height="24" RenderTransformOrigin="0.451,1.226" Width="30" Grid.Row="1"/>
        <ComboBox x:Name="cmbMeasureUnit" HorizontalAlignment="Left" Margin="19,133,0,0" Cursor="Hand" VerticalAlignment="Top" Width="67" Height="31" Grid.Row="1" FontSize="18"/>
        <Label Content="Količina" HorizontalAlignment="Left" Margin="133,107,0,0" VerticalAlignment="Top" Height="26" Width="52" Grid.Row="1"/>
        <TextBox x:Name="txtQuantity" HorizontalAlignment="Left" Margin="99,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD10017"/>
        <TextBox x:Name="txtUkupno" HorizontalAlignment="Left" Margin="186,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" IsEnabled="False" Grid.Column="1" Height="31" BorderBrush="#FF4B8C19" BorderThickness="2,2,2,2" Grid.Row="1"/>
        <TextBox x:Name="txtNetoUkupno" HorizontalAlignment="Left" Margin="411,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31" Grid.ColumnSpan="2" BorderBrush="#FF4B8C19" BorderThickness="2,2,2,2" Grid.Row="1" IsEnabled="False"/>
        <TextBox x:Name="txtPdvUkupno" HorizontalAlignment="Right" Margin="0,197,269,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113" Height="31" IsEnabled="False" Grid.Column="1" BorderBrush="#FF4B8C19" BorderThickness="2,2,2,2" Grid.Row="1"/>
        <Label Content="Neto" HorizontalAlignment="Left" Margin="452,171,0,0" VerticalAlignment="Top" Height="26" Width="38" RenderTransformOrigin="0.595,0.623" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="PDV Ukupno" Margin="0,171,289,0" VerticalAlignment="Top" Height="26" Grid.Column="1" HorizontalAlignment="Right" Width="80" Grid.Row="1"/>
        <Label Content="Bruto" HorizontalAlignment="Left" Margin="233,172,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="42" Grid.Row="1"/>
        <Label Content="Iznos PDV-a stava" HorizontalAlignment="Left" Margin="49,170,0,0" VerticalAlignment="Top" Width="96" Height="26" Grid.Row="1"/>
        <TextBox x:Name="txtValueOfPDV" HorizontalAlignment="Left" Margin="19,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="33" IsEnabled="False" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD9ED09"/>
        <TextBox x:Name="txtSumOfCell" HorizontalAlignment="Left" Height="33" Margin="201,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" IsEnabled="False" FontSize="16" Grid.Row="1" BorderBrush="#FFD9ED09" BorderThickness="2,2,2,2"/>
        <Label Content="Ukupno stavka" HorizontalAlignment="Left" Margin="244,164,0,0" VerticalAlignment="Top" Width="100" Height="26" RenderTransformOrigin="0.177,0.705" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="202" Margin="77,36,0,0" VerticalAlignment="Top" Width="347" Grid.RowSpan="2">
            <TextBox x:Name="txtPIBCustomer" TextWrapping="Wrap" Margin="23,91,8,70" FontSize="16" Height="39" BorderThickness="2,2,2,2" BorderBrush="#FFD10017"/>

        </Border>
        <Label Content="PIB" HorizontalAlignment="Left" Margin="237,6,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1" Height="26" RenderTransformOrigin="0.48,0.548" Grid.Row="1"/>
        <Label Grid.Column="1" Content="KUPAC" HorizontalAlignment="Left" Margin="227,6,0,0" VerticalAlignment="Top" Width="60" FontSize="16" Height="31"/>
        <Label Content="Naziv" HorizontalAlignment="Left" Margin="236,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.436,0.545" Grid.Column="1" Height="26" Width="39"/>
        <Button x:Name="btnAddCustomer" Cursor="Hand" Grid.Column="1" Content="DODAJ " HorizontalAlignment="Left" Margin="280,84,0,0" VerticalAlignment="Top" Height="35" Width="135" IsEnabled="False" Grid.Row="1"/>
        <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Margin="101,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Grid.Column="1" Height="39" FontSize="16" Grid.RowSpan="2" BorderBrush="#FFD10017" BorderThickness="2,2,2,2"/>
        <Button x:Name="btnFindCustomers" Cursor="Hand" Content="PRONADJI" HorizontalAlignment="Left" Margin="101,84,0,0" VerticalAlignment="Top" Height="35" Width="145" Grid.Column="1" IsEnabled="False" Grid.Row="1"/>
        <DatePicker x:Name="txtDateCreate" HorizontalAlignment="Left" Cursor="Hand" Margin="344,54,0,0" VerticalAlignment="Top" Height="24" Width="146" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="txtDateDelivery" Cursor="Hand" HorizontalAlignment="Left" Margin="345,6,0,0" VerticalAlignment="Top" Height="26" Width="145" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="Datum Plaćanja" HorizontalAlignment="Left" Margin="374,82,0,0" VerticalAlignment="Top" Width="116" Height="26" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Label Content="Datum Izdavanja" HorizontalAlignment="Left" Margin="367,27,0,0" VerticalAlignment="Top" Width="116" Height="26"/>
        <Button x:Name="btnOpenInvoice" Content="UČITAJ FAKTURU" HorizontalAlignment="Left" Margin="19,41,0,0" Cursor="Hand" VerticalAlignment="Top" Height="24" Width="282" IsEnabled="False"/>
        <Button x:Name="btnCreateOffer" Grid.Column="1" Content="KREIRAJ" Cursor="Hand" HorizontalAlignment="Left" Margin="337,175,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.293,-0.731" Height="57" Width="87" Background="#FF62D62E" FontFamily="Arial Black" BorderThickness="0,0,0,0" FontSize="14" Grid.Row="1"/>
        <Button x:Name="btnAddCell" Content=" DODAJ&#xA;STAVKU" HorizontalAlignment="Left" Margin="377,120,0,0" VerticalAlignment="Top" Height="45" Width="96" Background="#FF90B3FF" FontFamily="Arial Black" FontStretch="Normal" BorderThickness="0,0,0,0" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Cursor="Hand" Click="btnAddCell_Click"/>
        <Label Content="BROJ FAKTURE" HorizontalAlignment="Left" Margin="100,70,0,0" VerticalAlignment="Top" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="20" Grid.RowSpan="2" Height="31" Width="119"/>
        <TextBox x:Name="txtBrFakture" HorizontalAlignment="Left" Margin="48,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="30" FontSize="16" Grid.Row="1" BorderThickness="3,3,3,3" BorderBrush="#FF3E169A"/>
        <Button x:Name="btnUpdateCell" Content=" IZMENI &#xA;STAVKU" Cursor="Hand" HorizontalAlignment="Left"  FontFamily="Arial Black" FontStretch="Normal" Margin="482,71,0,0" Grid.Row="1" VerticalAlignment="Top" Height="44" Width="72" Background="#FFD0D21B" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Button x:Name="btnDeleteCell" Content="IZBRIŠI &#xD;&#xA;STAVKU"  Cursor="Hand" HorizontalAlignment="Left"  FontFamily="Arial Black" FontStretch="Normal"
                Margin="482,120,0,0" Grid.Row="1" VerticalAlignment="Top" Height="44" Width="72" Background="#FFF72B1B" Grid.ColumnSpan="2" IsEnabled="False"/>
        <TextBox x:Name="txtPriceArt" HorizontalAlignment="Left" Margin="294,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Height="31" FontSize="16" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD10017"/>
        <Label Content="Cena artikla" HorizontalAlignment="Left" Margin="348,36,0,0" VerticalAlignment="Top" Height="26" Width="74" Grid.Row="1"/>
        <TextBox x:Name="txtPoreskaOsnovica" HorizontalAlignment="Left" Margin="294,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="69" Height="31" FontSize="16" Grid.Row="1" BorderThickness="2,2,2,2" BorderBrush="#FFD10017" IsEnabled="False"/>
        <Label Content=" Poreska&#xD;&#xA;osnovica" HorizontalAlignment="Left" Margin="300,93,0,0" Grid.Row="1" VerticalAlignment="Top" Width="69"/>

    </Grid>
</Window>
